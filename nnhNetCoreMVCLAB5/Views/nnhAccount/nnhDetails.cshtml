@model nnhNetCoreMVCLAB5.Models.nnhAccount

@{
    ViewData["Title"] = "Chi tiết tài khoản";
    Layout = "~/Views/Shared/_nnhLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Thông tin chi tiết tài khoản</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NnhId)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NnhId)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NnhFullName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NnhFullName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NnhEmail)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NnhEmail)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NnhPhone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NnhPhone)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NnhAddress)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NnhAddress)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NnhAvatar)</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.NnhAvatar))
                    {
                        <img src="@Model.NnhAvatar" alt="Avatar" class="img-thumbnail" style="max-width: 150px;" />
                    }
                    else
                    {
                        <span class="text-muted">Chưa có ảnh</span>
                    }
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NnhBirthday)</dt>
                <dd class="col-sm-9">@Model.NnhBirthday.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NnhGender)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NnhGender)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NnhPassword)</dt>
                <dd class="col-sm-9">
                    <code>********</code> <small class="text-muted">(ẩn vì bảo mật)</small>
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NnhFacebook)</dt>
                <dd class="col-sm-9">
                    <a href="@Model.NnhFacebook" target="_blank">@Model.NnhFacebook</a>
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="nnhIndex" class="btn btn-secondary">Quay lại</a>
            <a asp-action="nnhEdit" asp-route-id="@Model.NnhId" class="btn btn-primary">Chỉnh sửa</a>
        </div>
    </div>
</div>
