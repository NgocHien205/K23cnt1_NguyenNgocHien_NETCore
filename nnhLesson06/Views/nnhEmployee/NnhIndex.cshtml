@model List<nnhLesson06.Models.DataModels.NnhEmployee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<h2>@ViewData["Title"]</h2>
<hr />
<a asp-action="NnhCreate" class="btn btn-primary mb-3">Thêm nhân viên mới</a>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>Mã NV</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Lương</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
       
        
            @foreach (var item in ViewBag.nnhListEmployee)
            {
                <tr>
                    <td>@item.NnhId</td>
                    <td>@item.NnhName</td>
                    <td>@item.NnhBirthDay.ToString("dd/MM/yyyy")</td>
                    <td>@item.NnhEmail</td>
                    <td>@item.NnhPhone</td>
                    <td>@item.NnhSalary.ToString("N0") đ</td>
                    <td>
                        @if (item.NnhStatus)
                        {
                            <span class="badge bg-success">Đang học</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Đã nghỉ</span>
                        }
                    </td>
                </tr>
            }
        
        @* else *@
        @* { *@
        @*     <tr> *@
        @*         <td colspan="7" class="text-center text-danger">Không có dữ liệu</td> *@
        @*     </tr> *@
        @* } *@
    </tbody>
</table>
